---
import { ScrollObserver } from 'astro-scroll-observer';
import { PageTransition } from 'astro-page-transition';
import '~/assets/styles/base.css';

import MetaTags from '~/components/common/MetaTags.astro';
import BasicScripts from '~/components/common/BasicScripts.astro';

import { MetaSEO } from '~/types';
import { SITE } from '~/config.mjs';
import Background from '~/components/common/Background';

export interface Props {
  meta?: MetaSEO;
}

const { meta = {} } = Astro.props;
const { language = 'en', textDirection = 'ltr' } = SITE;
---

<!DOCTYPE html>
<html lang={language} dir={textDirection} class="2xl:text-[20px]">
  <head>
    <MetaTags {...meta} />
    <ScrollObserver />
  </head>

  <body class="text-page bg-light dark:bg-dark tracking-tight antialiased dark:text-slate-300">
    <PageTransition speed={300} />
    <slot />
    <BasicScripts />
    <Background client:only="react" />
    <button class="scroll-down-hint fixed bottom-4 right-4 hidden">Top</button>
    <style is:global>
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
