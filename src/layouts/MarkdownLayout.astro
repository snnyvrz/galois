---
import Layout from '~/layouts/PageLayout.astro';

import { MetaSEO } from '~/types';

const { frontmatter } = Astro.props;

const meta: MetaSEO = {
  title: frontmatter?.title,
};
---

<Layout {meta}>
  <section
    class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl rounded-lg backdrop-blur-md my-4 md:my-8 bg-opacity-5 bg-white shadow-lg"
  >
    <h1 class="font-bold font-heading text-4xl md:text-5xl leading-tighter tracking-tighter">{frontmatter.title}</h1>
    <div
      class="mx-auto prose prose-lg max-w-4xl dark:prose-invert dark:prose-headings:text-slate-300 prose-md prose-headings:font-heading prose-headings:leading-tighter prose-headings:tracking-tighter prose-headings:font-bold prose-a:text-blue-600 dark:prose-a:text-blue-400 prose-img:rounded-md prose-img:shadow-lg mt-8 marker:text-accent"
    >
      <slot />
    </div>
  </section>
</Layout>
