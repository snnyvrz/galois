---
import Layout from '~/layouts/PageLayout.astro';

import { MetaSEO } from '~/types';

const { frontmatter } = Astro.props;

const meta: MetaSEO = {
  title: frontmatter?.title,
};
---

<Layout {meta}>
  <section
    class="mx-auto my-4 max-w-4xl rounded-lg bg-white bg-opacity-5 px-4 py-16 shadow-lg backdrop-blur-md sm:px-6 md:my-8 lg:px-8 lg:py-20"
  >
    <h1 class="leading-tighter font-heading text-4xl font-bold tracking-tighter md:text-5xl">{frontmatter.title}</h1>
    <div
      class="prose-md prose-headings:leading-tighter prose prose-lg mx-auto mt-8 max-w-4xl dark:prose-invert marker:text-accent prose-headings:font-heading prose-headings:font-bold prose-headings:tracking-tighter prose-a:text-blue-600 prose-img:rounded-md prose-img:shadow-lg dark:prose-headings:text-slate-300 dark:prose-a:text-blue-400"
    >
      <slot />
    </div>
  </section>
</Layout>
